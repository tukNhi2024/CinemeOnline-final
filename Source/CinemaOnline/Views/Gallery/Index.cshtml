@using BELibrary.Entity
@using PagedList.Mvc
@model PagedList.IPagedList<Gallery>

@{
    ViewBag.Title = "Thư viện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CSS {
    <!-- Magnific-popup -->
    <link href="~/Content/css/external/magnific-popup.css" rel="stylesheet" />
}

<!-- Main content -->
<section class="container" style="padding-top:85px">
    <div class="col-sm-12">
        <h2 class="page-heading">Thư viện</h2>

        <div class="row">
            <div class="gallery-wrapper">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4">
                        <div class="gallery-item">
                            <a href='@item.Url' class="gallery-item__image gallery-item--photo">
                                <img alt='@item.Title' src="@item.UrlThumb">
                            </a>
                            <a href='@item.Url' class="gallery-item__descript gallery-item--photo-link">
                                <span class="gallery-item__icon"><i class="fa fa-camera"></i></span>
                                <p class="gallery-item__name">@item.Title</p>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <!-- Pagination -->
            <div class="pagination-style1 clearfix text-right">
                @Html.PagedListPager(Model, page => "/" + "Gallery" + "?page=" + page)
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/Scripts/js/external/jquery.magnific-popup.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            init_Gallery();
        });
    </script>
}
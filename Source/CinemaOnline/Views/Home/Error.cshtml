@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://l-lin.github.io/font-awesome-animation/dist/font-awesome-animation.min.css">
<!-- Start main-content -->
<div class="main-content" style="padding-top:85px">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/Content/images/bg/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="full-name text-center">Có lỗi xảy ra</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="/">Trang chủ</a></li>
                            <li class="active text-gray-silver">Lỗi hệ thống</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="inner-header divider parallax layer-overlay overlay-dark-5">
        <div class="container pt-70 pb-20">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="alert alert-danger">  @(ViewBag.Message ?? "Lỗi chưa xác định")</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
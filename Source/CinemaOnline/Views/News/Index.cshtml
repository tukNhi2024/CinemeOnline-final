        <div class="col-sm-8 col-md-9">

            <h2 class="page-heading">News</h2>

            @foreach (var item in Model)
            {
                <!-- News post article-->
                <article class="post post--news">
                    <a href='/news/detail?id=@item.Id' class="post__image-link d-flex justify-content-center">
                        <img alt='' src="@item.BannerUrl">
                    </a>

                    <h1><a href="/news/detail?id=@item.Id" class="post__title-link">@item.Title</a></h1>
                    <p class="post__date">@( item.CreationTime.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm")) </p>

                    <div class="wave-devider"></div>

                    <p class="post__text">
                        @item.Description
                    </p>

                    <div class="tags">
                        <ul>
                            <li class="item-wrap"><a href="#" class="tags__item">mới</a></li>
                            <li class="item-wrap"><a href="#" class="tags__item">phim</a></li>
                        </ul>
                    </div>

                    <div class="devider-huge"></div>
                </article>
            }
            <div class="w-100 text-center">
                <div class="pagination pagination-style1 clearfix text-center">
                    @Html.PagedListPager(Model, page => "/" + "Gallery" + "?page=" + page)
                </div>
            </div>
        </div>


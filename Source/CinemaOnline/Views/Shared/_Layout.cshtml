<!doctype html>
<html>
<head>
    <!-- Basic Page Needs -->
    <meta charset="utf-8">
    <title>Major - @(ViewBag.Title ?? "Trang chủ")</title>
    <meta name="description" content="zFrame Team">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="zFrame">

    <link rel="shortcut icon" href="~/Content/images/film.ico" />

    <!-- Mobile Specific Metas-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="telephone=no" name="format-detection">

    <!-- Fonts -->
    <!-- Font awesome - icon font -->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Roboto -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,700' rel='stylesheet' type='text/css'>
    <!-- Open Sans -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:800italic' rel='stylesheet' type='text/css'>

    <!-- Stylesheets -->
    <!-- Mobile menu -->
    <link href="/Content/css/gozha-nav.css" rel="stylesheet" />
    <!-- Select -->
    <link href="/Content/css/external/jquery.selectbox.css" rel="stylesheet" />

    <!-- REVOLUTION BANNER CSS SETTINGS-->
    <link rel="stylesheet" type="text/css" href="/Content/plugin/css/settings.css" media="screen" />
    <!-- Custom-->
    <link href="/Content/css/style3860.css" rel="stylesheet" />
    <!-- Modernizr -->
    <script src="~/Scripts/js/external/modernizr.custom.js"></script>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.js"></script>
    <![endif]-->
    <!---->

    <link href="~/Content/plugin/notifyjs/lobibox.min.css" rel="stylesheet" />

    <link href="~/Content/alertify/alertify.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <link href="~/Content/css/custom.css" rel="stylesheet" type="text/css" />
    @RenderSection("CSS", required: false)
    <style>
        .ajs-message {
            color: white !important;
        }

        html {
            font-family: Suwannaphum, "DB Gin Siam X", "DB Helvethaica X";
            line-height: 1.15;
        }

        body {
            margin: 0;
            font-family: Suwannaphum, "DB Gin Siam X", "DB Helvethaica X";
            font-weight: 400;
            line-height: 1.5;
            letter-spacing: .05em;
        }

        .footer-1 {
            background: linear-gradient(250deg, #000000 0%, #261249 48%, #282A50 100%, #737373 100%);
        }

        .footer-info h4 {
            color: white;
        }

        .footer-info p {
            color: White;
        }

        .text-reset {
            color: inherit !important;
        }

            .text-reset:is(:hover) {
                color: #cda566 !important;
            }
    </style>
</head>

<body>
    <div class="wrapper">

        <!-- Header -->
        @Html.Partial("_PartialHeader")

        <!-- Start main-content -->
        @RenderBody()

        <div class="clearfix"></div>
        <!-- Footer -->
        @Html.Partial("_PartialFooter")
    </div>

    <!-- open/close -->
    @*<div class="overlay overlay-hugeinc">
            <section class="container">
                @RenderBody()
            </section>
        </div>*@
    <!-- JavaScript-->
    <!-- jQuery 1.9.1-->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Migrate -->
    <script src="~/Scripts/js/external/jquery-migrate-1.2.1.min.js"></script>
    <!-- Bootstrap 3-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- jQuery REVOLUTION Slider -->
    <script type="text/javascript" src="~/Content/plugin/js/jquery.themepunch.plugins.min.js"></script>
    <script type="text/javascript" src="~/Content/plugin/js/jquery.themepunch.revolution.min.js"></script>

    <!-- Mobile menu -->
    <script src="~/Scripts/js/jquery.mobile.menu.js"></script>
    <!-- Select -->
    <script src="~/Scripts/js/external/jquery.selectbox-0.2.min.js"></script>
    <!-- Stars rate -->
    <script src="~/Scripts/js/external/jquery.raty.js"></script>
    <!-- Form element -->
    <script src="~/Scripts/js/external/form-element.js"></script>
    <!-- Form validation -->
    <script src="~/Scripts/js/form.js"></script>
    <!-- Custom -->
    <script src="~/Scripts/js/custom.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            init_Home();
        });
    </script>
    <script src="~/Content/plugin/notifyjs/lobibox.min.js"></script>

    <script src="~/Scripts/js/base/common.js"></script>

    <script src="~/Scripts/alertify.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>